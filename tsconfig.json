{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "paths": {
      "opentype.js": ["../node_modules/opentype.js/dist/opentype.js"] // Alias pour opentype.js
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
